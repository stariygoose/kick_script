{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
		"moduleResolution": "nodenext",

		"baseUrl": ".",
		"rootDir": "./src",
		"outDir": "./dist",

		"types": [
			"node"
		],

		"strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,

		"experimentalDecorators": true,  
    "emitDecoratorMetadata": true
  },
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules"],
}
